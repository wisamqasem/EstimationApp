                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="@string/address_lbl" />

                <TextView
                    android:id="@+id/addressTB"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="أسم المشترك القديم" />

                <TextView
                    android:id="@+id/old_customer_nameTV"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="أسم المشترك" />

                <TextView
                    android:id="@+id/customer_nameTV"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="application Date" />

                <TextView
                    android:id="@+id/appl_date"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="status" />

                <TextView
                    android:id="@+id/status"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="service_status" />

                <TextView
                    android:id="@+id/service_status"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="sub_branch" />

                <TextView
                    android:id="@+id/sub_branch"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="service_no" />

                <TextView
                    android:id="@+id/service_no"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="service_class" />

                <TextView
                    android:id="@+id/service_class"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="meter_no" />

                <TextView
                    android:id="@+id/meter_no"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="meter_type" />

                <TextView
                    android:id="@+id/meter_type"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="install_date" />

                <TextView
                    android:id="@+id/install_date"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="last_read" />

                <TextView
                    android:id="@+id/last_read"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="last_read_date" />

                <TextView
                    android:id="@+id/last_read_date"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="notes" />

                <TextView
                    android:id="@+id/notes"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>








            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5sp">


                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="?android:attr/listDivider" />
            </LinearLayout>



            <TextView
                style="@style/titleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10sp"
                android:text="نموذج التغيير" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="service_no" />

                <TextView
                    android:id="@+id/service_no_form"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2.5" />
                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="meter_no" />

                <TextView
                    android:id="@+id/meter_no_form"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.2" />
            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:clipToPadding="false"
    android:paddingBottom="400px"
    >

    <TextView
        style="@style/dataLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.2"
        android:text="الأجراء"
        />
    <Spinner
        android:id="@+id/situations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:gravity="right"
        />



    <TextView
        style="@style/mediumLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:text="lastRead" />
    <EditText
        android:id="@+id/lastRead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/mediumLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.8"
        android:text="note" />
    <EditText
        android:id="@+id/note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
<View
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
</LinearLayout>







        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="5sp"
        android:weightSum="2">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/submit_form_lbl" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="@string/cancel_lbl" />

    </LinearLayout>

</RelativeLayout>











