<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/titleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10sp"
                android:text="@string/open_app_details_lbl" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.7"
                    android:text="@string/app_id_lbl" />

                <TextView
                    android:id="@+id/appID"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3" />

                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/consumer_name_lbl" />

                <TextView
                    android:id="@+id/customerNameTB"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4.5" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">

                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:text="@string/branch_lbl" />

                <TextView
                    android:id="@+id/branch"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.3" />

                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:text="@string/app_type_lbl" />

                <TextView
                    android:id="@+id/appType"
                    style="@style/dataLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5" />

                <!--<TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="@string/appDate" />

                <TextView
                    android:id="@+id/appDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/dataLabel"
                    android:layout_weight="2" />-->

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp"
                android:weightSum="10">


                <TextView
                    style="@style/mediumLabel"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/phone_lbl" />

                <TextView
                    android:id="@+id/phoneTB"
                    android:layout_width="0dip"
