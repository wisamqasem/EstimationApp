<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Title label  -->
    <style name="editText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_margin">2sp</item>
    </style>


    <!-- Title label  -->
    <style name="titleLabel" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:padding">3sp</item>
    </style>


    <!-- Labels Styles -->
    <style name="smallLabel" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:padding">3sp</item>
    </style>

    <style name="mediumLabel" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:padding">3sp</item>
    </style>

    <style name="largeLabel" parent="android:Widget.TextView">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:padding">3sp</item>
    </style>

    <!-- Layouts Styles-->
    <style name="hor_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ver_linearlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="ErrorButtonAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ff0000</item>
    </style>


    <style name="ButtonAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#0220DF</item>
    </style>

</resources>